{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_API_URL": "@matrix-api-url",
    "NEXT_PUBLIC_MATRIX_AI_URL": "@matrix-ai-url",
    "NEXT_PUBLIC_GUARDIAN_URL": "@matrix-guardian-url"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_URL": "@matrix-api-url",
      "NEXT_PUBLIC_MATRIX_AI_URL": "@matrix-ai-url",
      "NEXT_PUBLIC_GUARDIAN_URL": "@matrix-guardian-url"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
